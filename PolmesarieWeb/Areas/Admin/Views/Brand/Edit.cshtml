@model Brand

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Product Brand</h2>
            <hr />
        </div>
      @*  <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"> Name </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
           <div class="mb-3">
            <label asp-for="DisplayOrder"> Order Number </label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="container text-end">
        <a asp-controller="Brand" asp-action="Index" class="btn btn-primary" style="width:150px;"> Back </a>
        <button type="submit" class="btn btn-success" style="width:150px;"> Update </button>
       
        </div>
       

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
