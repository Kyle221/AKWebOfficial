@model ProductCategory

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Remove Product Category</h2>
            <hr />
        </div>
      @*  <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="CategoryName"> Name </label>
            <input asp-for="CategoryName" disabled class="form-control" />
           
        </div>
        <div class="mb-3">
            <label asp-for="CategoryDescription"> Description </label>
            <input asp-for="CategoryDescription" disabled class="form-control" />
           
        </div>
           <div class="mb-3">
            <label asp-for="DisplayOrder"> Order Number </label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" disabled class="text-danger"></span>
        </div>
        <div class="container text-end">
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px;"> Back </a>
        <button type="submit" class="btn btn-danger" style="width:150px;"> Delete </button>
       
        </div>
       

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
